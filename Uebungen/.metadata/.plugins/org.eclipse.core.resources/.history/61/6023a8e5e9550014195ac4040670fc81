package ch05.Pi;

public class PiCalculator2 {
	public static void pi(int n){
		double n = 1000000;
		double flaeche = 0;
		int counter = 1;
		int r = 1;

		while (counter < n) {
			flaeche = flaeche + 4*r/n*Math.sqrt((r*r)-((counter/n)*(counter/n)));
			counter = counter + 1;
		}	

		System.out.println("Die Fläche des Kreises mit dem Raidus r = " + r 
				+ " beträgt: " + flaeche + " (bei n = " + n + ")");
	}
}
